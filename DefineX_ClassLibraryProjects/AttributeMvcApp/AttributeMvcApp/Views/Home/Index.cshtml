@{
    ViewData["Title"] = "Öğrenci Kayıt Formu";
}

<h2>Öğrenci Kayıt</h2>

<!-- CSS ile Form Elemanlarını Hizalayalım -->
<form action="/Home/Kaydet" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="Adi">Adı:</label>
        <input type="text" name="Adi" id="Adi" />
    </div>

    <div class="form-group">
        <label for="Soyadi">Soyadı:</label>
        <input type="text" name="Soyadi" id="Soyadi" />
    </div>

    <div class="form-group">
        <label for="Bolum">Bölüm:</label>
        <input type="text" name="Bolum" id="Bolum" />
    </div>

    <button type="submit">Kaydet</button>
</form>

@if (!string.IsNullOrEmpty(ViewBag.Mesaj))
{
    <div class="mesaj-container @ViewBag.AlertClass">
        <span class="mesaj-ikon">&#10004;</span> @ViewBag.Mesaj
    </div>
}

<!-- CSS Kodları -->
<style>
    .mesaj-container {
        padding: 10px;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        margin-top: 10px;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px; /* İkon ve metin arasına boşluk bırakır */
        width: 50%;
        margin-left: auto;
        margin-right: auto;
    }

        .mesaj-container.success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .mesaj-container.error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

    .mesaj-ikon {
        font-size: 20px;
    }
</style>


<!-- CSS Kodları -->
<style>
    .form-group {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

        .form-group label {
            width: 80px; /* Label genişliği sabitlendi */
            text-align: right;
            margin-right: 10px;
        }

        .form-group input {
            width: 200px;
            padding: 5px;
            border: 1px solid #ccc;
        }

    button {
        margin-left: 90px; /* Butonun hizalanmasını sağladık */
        padding: 5px 10px;
        border: 1px solid #000;
        background-color: white;
        cursor: pointer;
    }

    .mesaj {
        color: red;
        font-weight: bold;
        margin-top: 10px;
    }
</style>
